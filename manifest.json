{
  "manifest_version": 3,
  "name": "LinkedIn Invitation Acceptor",
  "version": "1.1.0",
  "description": "Semi-automates accepting LinkedIn invitations with humanized delays. Triggered manually via toolbar icon.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Accept visible LinkedIn invitations"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
